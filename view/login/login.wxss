page {
  background-color: #f5f5f5;
}

page .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.login-page {
  font-size: 30rpx;
}

.login-page-wx-location {
  background: #fff;
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.login-page-wx-arrow {
  align-items: flex-end;
}

.form-login .t-cell-left {
  margin-right: 0;
}

.form-login .t-cell-title {
  width: 196rpx;
  flex: none;
}

.form-login .t-cell-note {
  margin-bottom: -20rpx;
}

.form-login .t-input {
  width: 100%;
}

.form-login .form-content {
  box-sizing: border-box;
  width: 100%;
  display: block;
}

.form-login .field-text {
  flex: 1;
  color: #666666;
  font-size: 30rpx;
  padding: 0;
}

.form-login .field-text::after {
  border: none !important;
}

.form-login .map {
  font-size: 48rpx !important;
  margin-left: 20rpx;
  color: #9d9d9f;
}

.form-login .label-list {
  line-height: 50rpx;
  background: #f5f5f5;
  color: #333;
  min-width: 100rpx;
  padding: 0 20rpx;
  height: 56rpx;
  margin: 0 32rpx 20rpx 0;
  font-size: 26rpx;
  border: 2rpx solid transparent;
  width: auto;
}

.form-login .label-list::after {
  content: none;
}

.form-login .active-btn {
  color: #2340e7;
  border: 2rpx solid #2340e7;
  background: rgba(255, 95, 21, 0.04);
}

.form-login .active-btn::after {
  border: 4rpx solid #354fe2;
}

.submit {
  box-sizing: border-box;
  padding: 64rpx 30rpx 88rpx 30rpx;
}

.submit .btn-submit-address {
  width: 100%;
  background: #2340e7;
  color: #fff;
  border-radius: 48rpx;
}

.submit .btn-submit-address.disabled {
  background-color: #c6c6c6;
}

.submit .btn-submit-address.disabled::after {
  display: none;
}

.dialog__button-confirm {
  color: #2340e7 !important;
}