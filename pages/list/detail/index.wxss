page {
  background-color: #f5f5f5;
}

page .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.container {
  font-size: 30rpx;
}

.form-index .t-cell {
  height: 100rpx;
}

.form-index .t-cell-left {
  margin-right: 0;
}

.form-index .t-cell-title {
  margin-left: 44rpx;
  width: 100rpx;
  flex: none;
}

.form-index .t-cell-note {
  justify-content: flex-start;
  margin-left: 32rpx;
}

.form-index .t-cell-title-all {
  margin-left: 44rpx;
  width: 56%;
  flex: none;
}

.form-index .t-input {
  width: 100%;
}

.form-index .form-content {
  box-sizing: border-box;
  width: 100%;
  display: block;
}

.form-index .field-text {
  flex: 1;
  color: #666666;
  font-size: 30rpx;
  padding: 0;
}

.form-index .field-text::after {
  border: none !important;
}

.swiper-right-del {
  height: 100%;
  width: 144rpx;
  background-color: #fa4126;
  font-size: 28rpx;
  color: white;
  display: flex;
  justify-content: center;
  align-items: center;
}