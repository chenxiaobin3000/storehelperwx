page {
  background-color: #f5f5f5;
}

page .divider-line {
  width: 100%;
  height: 20rpx;
  background-color: #f5f5f5;
}

.container {
  font-size: 30rpx;
}

.form-login .t-cell {
  height: 100rpx;
}

.form-login .t-cell-left {
  margin-right: 0;
}

.form-login .t-cell-title {
  margin-left: 44rpx;
  width: 100rpx;
  flex: none;
}

.form-login .t-input {
  width: 100%;
}

.form-login .form-content {
  box-sizing: border-box;
  width: 100%;
  display: block;
}

.form-login .field-text {
  flex: 1;
  color: #666666;
  font-size: 30rpx;
  padding: 0;
}

.form-login .field-text::after {
  border: none !important;
}

.form-login .t-checkbox {
  padding-left: 70rpx;
}

.submit {
  box-sizing: border-box;
  padding: 64rpx 30rpx 88rpx 30rpx;
}

.submit .btn-submit {
  width: 100%;
  background: #2340e7;
  color: #fff;
  border-radius: 48rpx;
}

.submit .btn-submit.disabled {
  background-color: #c6c6c6;
}

.submit .btn-submit.disabled::after {
  display: none;
}